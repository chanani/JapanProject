<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.thejapenproject.admin.service.AdminMapper">

    <insert id="addWordList" parameterType="java.util.List">
        INSERT INTO word (word_content,
                          word_meaning,
                          word_level,
                          word_chinese,
                          word_week)
        VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.word_content},
            #{item.word_meaning},
            #{item.word_level},
            #{item.word_chinese},
            #{item.word_week})
        </foreach>
    </insert>

    <insert id="addNotice" parameterType="NoticeVO">
        INSERT INTO notice (notice_title, notice_content)
        values (#{notice_title}, #{notice_content})
    </insert>

    <insert id="addWeekWord" parameterType="java.util.List">
        INSERT INTO school (school_week,
                            school_meaning,
                            school_content,
                            school_chinese)
        VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.school_week},
             #{item.school_meaning},
             #{item.school_content},
             #{item.school_chinese})
        </foreach>
    </insert>
</mapper>
